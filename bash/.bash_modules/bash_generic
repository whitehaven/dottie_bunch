# ------------------------------------------------------------
# Top-Level Configuration
# ------------------------------------------------------------
export TERM='xterm-256color'

# TODO: see if using which like this is dangerous
export VISUAL=$( which vim )
export EDITOR=$( which vim )

# ------------------------------------------------------------
# Bash Completion
# ------------------------------------------------------------
# add git completion
if [ -f ~/.git-completion.bash ]; then
. ~/.git-completion.bash
fi
# ------------------------------------------------------------
# gpg Settings
# ------------------------------------------------------------
# see `man gpg-agent`
export GPG_TTY=$(tty)

# ------------------------------------------------------------
# GNUtils
# ------------------------------------------------------------
# See http://www.shellperson.net/using-sudo-with-an-alias/
alias sudo='sudo '

alias cp='cp -iv'
alias mv='mv -iv'
alias c='clear'
alias x='exit'
alias q='exit'
alias mkdir='mkdir -pv'
alias h='history'

alias rp='realpath'

alias diff='colordiff'

# make directory and jump in
mcd()
{
  mkdir $1 && cd $1;
}

# calculate file/dir size
dush() {
  if [ $# -eq 0 ]; then
    du -sh * | sort -hr
  else
    du -sh $1 | sort -hr
  fi
}

# cd assist
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../../'

# for ls -> sl typo
alias sl='ls'

# ------------------------------------------------------------
# Process Handling
# ------------------------------------------------------------
# background fork
fns() #fire-and-submerge
{
  "$@" > /dev/null 2>&1 &
}

# tmux auto-detatch forks
# quotes needed in command too

fnf() #fire-and-forget
{
  tmux new-window -d "$@"
}

fnr() #fire-and-[read|remember]
{
  tmux new-window -d "$@; read"
}

# Go-based Powerline

GOPATH=$HOME/go
function _update_ps1() {
    PS1="$($GOPATH/bin/powerline-go -error $?)"
}
if [ "$TERM" != "linux" ] && [ -f "$GOPATH/bin/powerline-go" ]; then
    PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi

# ------------------------------------------------------------
# Misc. Application Aliases
# ------------------------------------------------------------
## Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# ------------------------------------------------------------
# Git
# ------------------------------------------------------------
alias gs='git status'
alias gl='git lg'

# ------------------------------------------------------------
# TCP/UDP Networking
# ------------------------------------------------------------
getExternalIP()
{
  wget -qO- http://ipecho.net/plain;
  echo;
}

getGatewayIP()
{
  route -n get default | grep gateway: | awk '{gsub("    gateway: ","");print}';
}

getMACAddress()
{
  ifconfig en0 | grep ether | awk '{gsub("\tether ","");print}';
}

# ------------------------------------------------------------
# Python Environment
# ------------------------------------------------------------
# find packages updated by pip instad of conda
alias updated_by_pip="conda list | grep pip | cut -d' ' -f1"
