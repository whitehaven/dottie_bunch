# task data location
data.location=~/.task

json.depends.array=off

# tasksh review settings
uda.reviewed.type            = date
uda.reviewed.label           = Reviewed
report._reviewed.description = Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns     = uuid
report._reviewed.sort        = reviewed+,modified+
report._reviewed.filter      = ( reviewed.none: or reviewed.before:now-1week ) and ( +PENDING or +WAITING )

# priorities
# - High, Medium, Low, (none), Unimportant, Someday/maybe
uda.priority.values                = H,M,L,,U,S
urgency.uda.priority.H.coefficient = 6.0
urgency.uda.priority.M.coefficient = 3.9
urgency.uda.priority.L.coefficient = 1.8
urgency.uda.priority.U.coefficient = -4.0
urgency.uda.priority.S.coefficient = -8.0

# color options
color.blocked         = color10
color.blocking        = bold black on white

color.uda.priority.H  = rgb520   # orange
color.uda.priority.M  = color184 # yellow
color.uda.priority.L  = rgb250   # green-yellow
color.uda.priority.U  = magenta  # magenta
color.uda.priority.S  = rgb215   # purple

# context definitions
context.out    = -campus -home
context.campus = -home -out
context.home   = -campus            # can still go +out prn
context.mtg    = -home -campus -out # can't leave a place

# display settings
# - force columns to infinite width
#   - helps vim-taskwarrior and tw reports display well on large screens
rc.defaultwidth = 0

# `task information` settings
# - stop display of history (cluttered, especially with inthe.am's messing about)
journal.info = off

# inbox report
# - minimal report to encourage inbox processing
# - requires +in tag
#   - works best with shell alias, like:
#     `alias in='task add +in '`
#     You can then do
#     `$ in consider breeder reactor for Jaeger Suit`
#     and you get a task named 'consider breeder reactor for Jaeger Suit` with the +in tag
# - best to also have an inbox report for processing; see below
report.in.columns     = id,description
report.in.description = inbox
report.in.filter      = status:pending limit:page (+in)
report.in.labels      = ID,Description

# dfd UDA
# - drops urgency
# - stores name of deferral target for follow-up
uda.dfd.type                = string
uda.dfd.label               = Def
urgency.uda.dfd.coefficient = -15.0
color.uda.dfd               = underline

# next report
# - add UDA dfd
report.next.columns     = id,start.age,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,dfd,description,urgency
report.next.description = Most urgent tasks
report.next.filter      = status:pending limit:page
report.next.labels      = ID,Active,Deps,P,Project,Tag,Recur,S,Due,Until,DfdTo,Description,Urg
report.next.sort        = urgency-

# ready report
# - filter out deferred tasks
# - put started tasks at top, regardless of urgency
# - limit to page
report.ready.columns     = id,start.age,depends,priority,project,tags,recur.indicator,scheduled.countdown,due.remaining,until.remaining,description,urgency
#report.ready.description = Most urgent actionable tasks
report.ready.filter      = +READY limit:page dfd.none:
report.ready.labels      = ID,Active,D,P,Project,Tags,R,Sch,Due,Until,Description,Urg
#report.ready.sort        = start-,urgency-

# deferred report
# - uses dfd UDA
report.deferred.columns     = id,status,dfd,scheduled.countdown,due.countdown,until.remaining,description
report.deferred.description = Show deferred tasks
report.deferred.filter      = (status:pending or status:waiting) and dfd.any:
report.deferred.labels      = ID,Status,DfdTo,Sch,Due,Until,Description
report.deferred.sort        = status+,dfd+/,urgency-

# task urgency inheritance
# - tasks inherit urgency value of tasks depending on them unless their own is already greater
# - tasks that are blocking other tasks have minimum urgency of 4
#   (This is about the same as a standalone task being due in 2 weeks.)
urgency.inherit              = on
urgency.blocked.coefficient  = 0
urgency.blocking.coefficient = 4
report.ready.filter=+READY limit:page dfd.none: priority.not:S
urgency.user.tag.in.coefficient=8

# taskd settings
taskd.certificate=\/home\/accrist\/.task\/Alex_Crist.cert.pem
taskd.key=\/home\/accrist\/.task\/Alex_Crist.key.pem
taskd.ca=\/home\/accrist\/.task\/ca.cert.pem
taskd.server=dralexcrist.com:53589
taskd.credentials=WHI\/Alex Crist\/88be24f9-d946-48dc-b0ad-f0bd53b9edb0
taskd.trust=ignore hostname
color.tag.in=white on color202
rule.precedence.color=deleted,completed,overdue,due.today,active,keyword.,tag.,project.,scheduled,due,uda.,blocked,blocking,recurring,tagged

# report sorted by due
report.dues.description=Simple List of Tasks Sorted by Due Date
report.dues.columns=id,project,description,due.remaining
report.dues.sort=due+
report.dues.labels=ID,Proj,Desc,Due
report.dues.filter=status:pending limit:page

color.scheduled=white on rgb001
color.overdue=white on red
